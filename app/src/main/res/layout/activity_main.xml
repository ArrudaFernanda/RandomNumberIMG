<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/bolavazia" android:id="@+id/img1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="164dp"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>

    <ImageView android:layout_width="80dp"
               android:layout_height="80dp"
               app:srcCompat="@drawable/bolavazia" android:id="@+id/img2"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/img1"
               android:layout_marginTop="164dp"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/bolavazia" android:id="@+id/img3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/img2"
            android:layout_marginTop="164dp"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/bolavazia" android:id="@+id/img4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/img3"
            android:layout_marginTop="164dp"/>
    <Button
            android:text="Gerar Palpite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnGerar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="140dp" android:layout_marginStart="140dp" android:layout_marginBottom="340dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>